<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.vigekoo.modules.sys.dao.SysLogDao">

	<select id="queryObject" resultType="com.vigekoo.modules.sys.entity.SysLog">
		select * from sys_log where id = #{value}
	</select>

	<select id="queryList" resultType="com.vigekoo.modules.sys.entity.SysLog">
		select * from sys_log 
		<where>
			<if test="key != null and key != ''">
		  	`username` like concat('%',#{key},'%') or `operation` like concat('%',#{key},'%')
			</if>
		</where>
		<choose>
			<when test="sidx != null and sidx != ''">
				order by ${sidx} ${order}
			</when>
			<otherwise>
				order by id desc
			</otherwise>
		</choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from sys_log 
		<where>
			<if test="key != null and key != ''">
				`username` like concat('%',#{key},'%') or `operation` like concat('%',#{key},'%')
			</if>
		</where>
	</select>
	 
	<insert id="save" parameterType="com.vigekoo.modules.sys.entity.SysLog" useGeneratedKeys="true" keyProperty="id">
		insert into sys_log
		(
			`username`, 
			`operation`, 
			`method`, 
			`params`,
			`time`,
			`ip`, 
			`create_time`
		)
		values
		(
			#{username}, 
			#{operation}, 
			#{method}, 
			#{params},
			#{time},
			#{ip}, 
			#{createTime}
		)
	</insert>
	
	<delete id="delete">
		delete from sys_log where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from sys_log where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>